package stepIT.homeWork;

import java.util.Scanner;
/*
Создайте программу, определяющую является число чётным или нечётным.

- Для создания программы определяющей является число чётным или
нечётным, мы используем операторы условий и остаток от деления.
 */
public class EvenOdd {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Введите число:");
        int number = scanner.nextInt();

        if (number % 2 == 0) {
            System.out.println(number + " - число является четным.");
        } else {
            System.out.println(number + " - число является не четным.");
        }
        scanner.close();
    }
}