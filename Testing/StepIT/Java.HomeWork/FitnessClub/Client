package stepIT.homeWork.FitnessClub;

public class Client {

    // Приватные поля Класса Client:
    private String name;
    private int age;
    private String email;
    private String phoneNumber;

    // Конструктор:
    public Client(String name, int age, String email, String phoneNumber) {
        this.name = name;
        this.age = age;
        this.email = email;
        this.phoneNumber = phoneNumber;
    }

    // Get & Set:
    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        this.age = age;
    }

    public String getEmail() {
        return email;
    }

    public void setEmail(String email) {
        this.email = email;
    }

    public String getPhoneNumber() {
        return phoneNumber;
    }

    public void setPhoneNumber(String phoneNumber) {
        this.phoneNumber = phoneNumber;
    }

    // Методы класса для взаимодействия с клиентом:

    // 1. Метод addEmail() добавления электронной почты клиента.
    public void addEmail (String message) {
        System.out.println(" The email added successfully !");
    }

    // 2. Метод addPhoneNumber() добавления номера телефона клиента.
    public void addPhoneNumber (String message) {
        System.out.println(" The Phone Number added successfully !");
    }

    // 3. Метод updateContactInfo() обновляет контакты.
    public void updateContactInfo(String email, String phoneNumber) {
        setEmail(email);
        setPhoneNumber(phoneNumber);
    }
}
