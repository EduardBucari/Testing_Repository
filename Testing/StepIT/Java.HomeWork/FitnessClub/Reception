package stepIT.homeWork.FitnessClub;

public class Reception {
    public static void main(String[] args) {

        // Создаем нового клиента client1:
        Client client1 = new Client("John Weak", 30, "john@example.com", "555-1234");

        // Добавляем email
        client1.addEmail("New email address");

        // Добавляем номер телефона
        client1.addPhoneNumber("New phone number");

        // Обновляем контакты
        client1.updateContactInfo("newemail@example.com", "555-4321");
    }
}
